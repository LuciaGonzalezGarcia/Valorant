<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/valorantbackground"
    tools:context=".map.MapActivity">

    <TextView
        android:id="@+id/NameMapTextView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="#8FFFFFFF"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenMapa"
        android:layout_width="298dp"
        android:layout_height="162dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-30dp"
        app:layout_constraintEnd_toStartOf="@+id/NameMapTextView"
        app:layout_constraintTop_toBottomOf="@+id/NameMapTextView"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imagePlanID"
        android:layout_width="298dp"
        android:layout_height="162dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="30dp"
        android:background="#273C61"
        app:layout_constraintStart_toEndOf="@+id/NameMapTextView"
        app:layout_constraintTop_toBottomOf="@+id/NameMapTextView"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ProgressBar
        android:id="@+id/progressBarMap"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>